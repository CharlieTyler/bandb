<!DOCTYPE html>
<html>
  <head>
    <title>Fulham Bed and Breakfast</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('favicon.png'), :rel => 'icon', :type => 'image/png' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

    <div id="flex-content-container">
      <div class="container">
        <header class="blog-header py-3">
          <div class="col-12 col-md-6 offset-md-3 text-center">              
            <%= link_to root_path do %>
              <%= image_tag 'bandb.png', class: 'img-fluid mx-auto d-block', alt: 'Bed and Breakfast' %>
            <% end %>
          </div>
        </header>

        <div class="row justify-content-md-center">
          <div class="nav-scroller py-1 mb-2 col-md-8">
            <nav class="nav d-flex justify-content-between">
              <%= link_to 'Home', root_path, class: 'p-2 text-muted' %>
              <%= link_to 'About', '/pages/about', class: 'p-2 text-muted' %>
              <%= link_to 'Bookings', '/bookings', class: 'p-2 text-muted' %>
              <%= link_to 'Find Us', '/pages/find-us', class: 'p-2 text-muted' %>              
              <%= link_to 'Contact', '/pages/contact' , class: 'p-2 text-muted' %> 
            </nav>
          </div>
        </div>

        <br/>
        <% if notice.present? %>
          <p class="alert alert-info"><%= notice %></p>
        <% end %>
        <% if alert.present? %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
      
        <%= yield %>

      </div>

      <footer class="blog-footer">
        <% if user_signed_in? %>
          <a class="" href='#' >Portal</a>
          <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: '' %>
        <% else %>
          <%= link_to 'Admin', new_user_session_path, class: '' %>
        <% end %>
        <p>&copy; Fulham Bed and Breakfast <%= Date.today.year %></p>
      </footer>

    </div>
  </body>
</html>
