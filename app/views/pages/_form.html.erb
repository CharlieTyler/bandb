<%= simple_form_for(@page) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :slug %>
    <%= f.input :meta %>
    <%= f.input :content, input_html: { class: 'quill_container' }  %>
    <%= f.input :detail %>
    <%= f.input :bullet %>
    <%= f.input :image %>
    <%= f.input :map %>
    <%= f.input :address %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success' %>
  </div>
<% end %>

