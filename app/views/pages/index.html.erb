<h1>Admin Portal</h1>

<table class="table">
  <thead>
    <tr>
      <th>
        Page
      </th>
      <th>
        Slug
      </th>
      <th>
        View
      </th>
      <th>
        Edit
      </th>
      <th>
        Delete
      </th>
    </tr>
  </thead>
  <tbody>
    <% @pages.each do |page| %>
    <tr>
      <td>
        <%= page.title %>
      </td>
      <td>
        <%= page.slug %>
      </td>
      <td>
        <%= link_to 'View', page, class: 'btn btn-info' %>
      </td>
      <td>
        <%= link_to 'Edit', edit_page_path(page), class: 'btn btn-warning' %>
      </td>
      <td>
        <% if page.slug != "home" %>
          <%= link_to 'Delete', page, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
  <div class="text-center">
    <%= link_to 'New Page', new_page_path, class: 'btn btn-success btn-lg' %>
    <%= link_to 'Add booking', bookings_path, class: 'btn btn-info btn-lg' %>
  </div>

